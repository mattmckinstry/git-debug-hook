#!/bin/bash
# Based on code by Remigijus Jarmalavičius
# Checks the files to be committed for the presence of debugger;, Debugger.Launch();
# The array below can be extended for further checks

checks[1]="debugger;"
checks[2]="Debugger.Launch();"

element_count=${#checks[@]}
let "element_count = $element_count + 1"

extensions[1]="js"
extensions[2]="cs"

extension_count=${#extensions[@]}
let "extension_count = $extension_count + 1"

ROOT_DIR="$(pwd)/"
LIST=$(git status | grep -e 'modified' -e 'new file:')
ERRORS_BUFFER=""
for file in $LIST
do
    if [ "$file" == '#' ]; then
        continue
    fi
    if [ $(echo "$file" | grep -e 'modified:') ]; then
        FILE_ACTION="modified"
    elif [ $(echo "$file" | grep -e 'new file:') ]; then
        FILE_ACTION="added"
    else        
	outterindex=1
	while [ "$outterindex" -lt "$extension_count" ]
	do		
		EXTENSION=$(echo "$file" | grep "${extensions[$outterindex]}")

		if [ "$EXTENSION" != "" ]; then

			index=1
			while [ "$index" -lt "$element_count" ]
			do
				#echo "Checking $FILE_ACTION file: $file [${checks[$index]}]" 
				ERRORS=$(grep "${checks[$index]}" $ROOT_DIR$file >&1)
				if [ "$ERRORS" != "" ]; then
					if [ "$ERRORS_BUFFER" != "" ]; then
						ERRORS_BUFFER="$ERRORS_BUFFER\n$ERRORS"
					else
						ERRORS_BUFFER="$ERRORS"
					fi
					#echo "${checks[$index]} found in file: $file "
				fi
				let "index = $index + 1"
			done
		fi				
		let "outterindex = $outterindex + 1"
	done        
    fi
done
if [ "$ERRORS_BUFFER" != "" ]; then
    echo 
    echo "These errors were found in try-to-commit files: "
    echo -e $ERRORS_BUFFER
    echo 
    echo "Can't commit, fix errors first."
    exit 1
else
    echo "Committed successfully."
fi
